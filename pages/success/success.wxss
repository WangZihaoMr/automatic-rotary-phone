/* pages/success/success.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.success-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 700rpx;
  background-color: #f9f9f9;
}

.success-icon {
  margin: 80rpx 0 10rpx 0;
  width: 100rpx;
  height: 100rpx;
}

.backHome {
  padding: 20rpx 60rpx;
  margin-top: 100rpx;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 6rpx;
  background-color: #f5ba47;
}

.like-wrapper {
  flex: 1;
}

.like-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  border-bottom: 2rpx solid #bbb;
}

.like-title text {
  color: #f00;
}

.like-title view {
  margin: 0 6rpx;
}

.may-wrapper {
  padding: 30rpx 20rpx 20rpx;
  background-color: #ffffff;
}

.manggo {
  width: 100%;
  height: 350rpx;
}

.shop-title {
  font-size: 28rpx;
  color: #bbb;
}

.shopPrice {
  font-size: 30rpx;
  color: #f00;
}

.shopBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-count {
  font-size: 24rpx;
  font-size: 20rpx;
  color: #bbb;
}

.pay-button {
  padding: 10rpx 20rpx;
  color: #ffffff;
  border-radius: 6rpx;
  background-color: #f00;
}